<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokerCardFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        style="@style/JokerCard">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_icon_top"
                tools:src="@drawable/joker_black"
                style="@style/JokerCard.Image.Top"/>
            <ImageView
                android:id="@+id/card_icon_bottom"
                tools:src="@drawable/joker_red"
                style="@style/JokerCard.Image.Bottom" />
            <TextView
                android:id="@+id/joke_text"
                style="@style/JokerCard.Text.Joke"
                tools:text="@string/initial_card_text" />

        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.percent.PercentFrameLayout>
